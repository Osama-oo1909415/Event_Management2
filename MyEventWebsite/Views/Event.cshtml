@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Event>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    Layout = "Master.cshtml"; // Optional: Use a master layout file
}

<h1>@Model.Value("eventTitle")</h1>

@if (Model.HasValue("eventImage"))
{
    var eventImage = Model.Value<IPublishedContent>("eventImage");
    <img src="@eventImage.Url()" alt="@Model.Value("eventTitle")" style="max-width: 500px;" />
}

<p><strong>From:</strong> @Model.Value("startDateTime", fallback: Fallback.ToDefaultValue, defaultValue: DateTime.Now.ToString())</p>
<p><strong>To:</strong> @Model.Value("endDateTime", fallback: Fallback.ToDefaultValue, defaultValue: DateTime.Now.ToString())</p>
<p><strong>Location:</strong> @Model.Value("location")</p>
<p><strong>Organizer:</strong> @Model.Value("organizer")</p>

<hr />

<div>
    @Model.Value("eventDescription")
</div>